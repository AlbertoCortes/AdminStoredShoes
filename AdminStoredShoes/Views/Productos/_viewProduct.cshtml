                </div>
            </div>
        </div>


        <div class="col-lg">

            <div class="form-group row">
                @try
                {
                    if (Model.Item2.Count != 0)
                    {
                        <img src="@imggg(Model.Item2.FirstOrDefault().Image)" alt="" height="250" width="250">

                    }
                }
                catch (Exception)
                {

                    throw;
                }
                
            </div>

            <input type="button" class="btn btn-success" value="Editar" name="_editar" onclick="location.href='@Url.Action("_editProduct","Productos",new {id = Model.Item1.Id })'" />

        </div>



    </div>
    

</form>



@functions{ 

    public string imggg(byte[] im)
    {
        var base64 = Convert.ToBase64String(im);
        string imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        return imgSrc;
    }

}

