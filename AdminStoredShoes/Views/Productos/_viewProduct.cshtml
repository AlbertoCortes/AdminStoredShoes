                <div class="col-sm-10">
                    <input class="form-control" id="readOnlyInput" type="text" placeholder="@Model.Item1.Catalago" readonly="">

                </div>
            </div>

            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Titulo</label>
